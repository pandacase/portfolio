{
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": { // On Save
    "source.fixAll.eslint": "explicit" // 启用 ESLint 自动修复
  },
  "editor.wordWrap": "on" // 在视觉上进行自动换行
}
